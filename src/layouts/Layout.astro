<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #ffffff;
	}
	body {
		padding: 1rem 2rem;
		max-width: 1600px;
		margin: auto;
