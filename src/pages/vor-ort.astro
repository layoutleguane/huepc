---
import { Image } from 'astro:assets';

import Layout from '../layouts/Layout.astro';
import CallToAction from '../components/CallToAction.astro';

import abc from '../images/abc-seite.webp';

import * as text from '../content/pages/abc.md';
---

<Layout title="HüllerPolitCamp">
	<main>
		<div class="container py-4">
			<h1 class="text-primary pb-md-1">{text.frontmatter.title}</h1>
			<p class="fst-italic">{text.frontmatter.subtitle}</p>
			<div class="row">
				<div class="col-md-4">
					<Image src={abc} class="w-100 h-100 p-md-5" alt="Blick auf den Innenhof von mehreren restaurierten Fachwerkhäusern. Eines hat einen modernen Anbau.">
				</div>
				<div class="col-md-8 pt-md-5"><div set:html={text.compiledContent()}/></div>
			</div>
		</div>
	</main>
	<CallToAction />
</Layout>
