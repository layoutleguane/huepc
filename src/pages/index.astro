---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Hero from '../components/Hero.astro';
import Quiz from '../components/Quiz.astro';
import Social from '../components/Social.astro';

import HuePC22 from '../../public/huepc22.jpg';
import Abc from '../../public/abc.jpg';
import Dachstuhl from '../../public/arbeiten-am-dachstuhl.jpg';
import Huell from '../../public/huell.jpg';
import Paper from '../../public/paper.jpg';

import * as introText from '../content/shorts/01-intro.md';
import * as locationText from '../content/shorts/02-location.md';
import * as actionText from '../content/shorts/03-call-to-action.md';
---

<Layout title="HÃ¼llerPolitCamp">
	<main>
		<Hero />

		<section class="container">
			<div class="row">
				<div class="col-md-4 mb-4">
					<h3 class="text-uppercase fw-bold fs-5">Datum</h3>
					<span class="fs-5"> Montag, 12.12.2024 bis<br> Sonntag, 12.12.2024</span>
				</div>
				<div class="col-md-4 mb-4">
					<h3 class="text-uppercase fw-bold fs-5">Ort</h3>
					<span class="fs-5">ABC Bildungs-<br> und Tagungszentrum<br>Bauernreihe 1, 21706 Drochtersen</span>
				</div>
				<div class="col-md-4 mb-4">
					<h3 class="text-uppercase fw-bold fs-5">Preis</h3>
					<span class="fs-5">Freiwilliger Beitrag</span>
				</div>
			</div>
		</section>

		<section>
			<div class="container mt-5">
				<div class="row align-items-center">
					<div class="col-md-7">
						<h2 class="text-primary">{introText.frontmatter.title}</h2>
						<p set:html={introText.compiledContent()}/>
						<a href="/infos/" class="btn btn-secondary">Alles Organisatorische</a>
					</div>
					<div class="col-md-4">
						<img src={HuePC22} class="mw-100 p-md-5">
					</div>
				</div>
			</div>

			<div class="container my-4">
				<div class="row align-items-center">
					<div class="col-md-5">
						<img src={Huell} aria-hidden="true" class="mw-100 p-md-5" />
					</div>
					<div class="col-md-7 p-4">
						<h2 class="text-primary">{locationText.frontmatter.title}</h2>
						<p set:html={locationText.compiledContent()}/>
						<a href="/vor-ort/" class="btn btn-secondary">Alles zur Unterbringung und Anreise</a>
					</div>
				</div>
			</div>

			<div class="container my-4">
				<div class="row align-items-center">
					<div class="col-md-8">
						<h2 class="text-primary">{actionText.frontmatter.title}</h2>
						<p set:html={actionText.compiledContent()}/>
						<button class="btn btn-primary">Anmelden</button>
					</div>
					<div class="col-md-4">
						<img src={Paper} class="mw-100 p-md-5">
					</div>
				</div>
			</div>
		</section>

		<Social />

		<Quiz />
	</main>
</Layout>
